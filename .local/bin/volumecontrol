#!/bin/bash

# You can call this script like this:
# volumecontrol up
# volumecontrol down
# volumecontrol mute

function get_volume {
    pamixer --get-volume
}

function is_mute {
    pamixer --get-mute > /dev/null
}

function _get_mic() {
	pamixer --list-sources | grep input | grep Stealth | awk '{print $1}'
}

function send_notification {
    volume=`get_volume`
    # Make the bar with the special character ─ (it's not dash -)
    # https://en.wikipedia.org/wiki/Box-drawing_character
    if [ "$volume" = "0" ]; then
        icon_name="/usr/share/icons/breeze-dark/status/16/audio-volume-muted.svg"
        dunstify -i "$icon_name" -r 5556 -u normal "$volume"
    else
	    if [  "$volume" -lt "10" ]; then
	        icon_name="/usr/share/icons/breeze-dark/status/16/audio-volume-low.svg"
            dunstify -i "$icon_name" -r 5556 -u normal "$volume"
        else
            if [ "$volume" -lt "30" ]; then
                icon_name="/usr/share/icons/breeze-dark/status/16/audio-volume-low.svg"
            else
                if [ "$volume" -lt "70" ]; then
                    icon_name="/usr/share/icons/breeze-dark/status/16/audio-volume-medium.svg"
                else
                    icon_name="/usr/share/icons/breeze-dark/status/16/audio-volume-high.svg"
                fi
            fi
        fi
    fi
    bar=$(seq -s "─" $(($volume/5)) | sed 's/[0-9]//g')
    # Send the notification
    dunstify -i "$icon_name" -r 5556 -u normal "$bar  $volume"
}

case $1 in
    up)
        # Set the volume on (if it was muted)
        pamixer -u
        #amixer -D pulse set Master on > /dev/null
        # Up the volume (+ 2%)
		pamixer -i 2
        #amixer -D pulse sset Master 2%+ > /dev/null
        send_notification
        canberra-gtk-play -i audio-volume-change
        ;;
    down)
	    # Set the volume on (if it was muted)
		pamixer -u
        #amixer -D pulse set Master on > /dev/null
		# Down the volume (+2%)
		pamixer -d 2
        #amixer -D pulse sset Master 2%- > /dev/null
        send_notification
        canberra-gtk-play -i audio-volume-change
        ;;
    mute)
    	# Toggle mute
        pamixer -t
        if is_mute ; then
            dunstify -i "/usr/share/icons/breeze-dark/status/16/audio-volume-muted.svg" -r 5556 -u normal "$bar Audio Muted"
        else
	        send_notification
            canberra-gtk-play -i audio-volume-change
        fi
        ;;
	mutemic)
        pamixer --list-sources | grep 'input' | awk '{print $1}' | while read -r index; do
	        pamixer --source "$index" -t
		    muted=$(pamixer --source "$index" --get-mute)
		done
	    #pamixer --source $(_get_mic) -t
		if [ "$muted" == "true" ]; then
		    dunstify -i "/usr/share/icons/breeze-dark/status/24/mic-off.svg" -r 5556 -u normal "Mic Muted"
		else
		    dunstify -i "/usr/share/icons/breeze-dark/status/24/mic-on.svg" -r 5556 -u normal "Mic Unmuted"
		fi
		;;
    *)
        volume_human="$(pamixer --get-volume-human)"
        volume="$(pamixer --get-volume)"
	    if [[ "$volume" == "100" ]]; then
		    icon=""
	    elif [[ "$volume" -ge "89" && "$volume" -le "100" ]]; then
		    icon=""
	    elif [[ "$volume" -ge "79" && "$volume" -le "90" ]]; then
		    icon=""
	    elif [[ "$volume" -ge "69" && "$volume" -le "80" ]]; then
		    icon="墳"
	    elif [[ "$volume" -ge "59" && "$volume" -le "70" ]]; then
		    icon="墳"
	    elif [[ "$volume" -ge "49" && "$volume" -le "60" ]]; then
		    icon="墳"
	    elif [[ "$volume" -ge "39" && "$volume" -le "50" ]]; then
		    icon="墳"
	    elif [[ "$volume" -ge "29" && "$volume" -le "40" ]]; then
		    icon=""
	    elif [[ "$volume" -ge "19" && "$volume" -le "30" ]]; then
		    icon=""
	    elif [[ "$volume" -ge "9" && "$volume" -le "20" ]]; then
		    icon=""
	    elif [[ "$volume" -gt "0" && "$volume" -le "10" ]]; then
		    icon=""
	    elif [[ "$volume" -eq "0" ]]; then
		    icon=""
		    volume_human=" M "
	    fi

        if is_mute; then
		    icon=""
		    volume_human=" M "
        fi

        printf "%s" "$icon $volume_human"
        ;;
esac
